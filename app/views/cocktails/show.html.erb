<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <h5>
    <%= dose.ingredient.name %>
    (<%= dose.description %>)
    <%= link_to "Delete dose", dose_path(dose),
                               method: :delete,
                               data: { confirm: 'Are you sure?' } %>
  </h5>
<% end %>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to index", cocktails_path %>
